#if 0
name=D<
stack=( d1 d2 -- flag )
tags=forth-83,double,primitive
Compare two doubles.  True if d1 < d2
#endif
dlt
    ldy #0          ; false
    jsr dcmp
    bvc dlt01
    eor #$80
dlt01
    bpl dlt02
    dey             ; true
dlt02
    sty tos
    sty tos+1
    inx
    inx
    inx
    jmp next
dcmp
    lda stackl+2,x
    cmp stackl,x
    lda stackh+2,x
    sbc stackh,x
    lda stackl+1,x
    sbc tos
    lda stackh+1,x
    sbc tos+1
    rts

