;--------------------------------------------------------------
;--------------------------------------------------------------
#if 0
name=D+
stack=( d1 d2 -- d1+d2 )
tags=forth-83,double
[desc]
Add two double precision numbers
[/desc]
#endif
dplus
    clc
    lda stackl,x
    adc stackl+2,x
    sta stackl+2,x
    lda stackh,x
    adc stackh+2,x
    sta stackh+2,x
    lda tos
    adc stackl+1,x
    pha
    lda tos+1
    adc stackh+1,x
    tay
    pla
    inx
    inx
    jmp put            ; [29]

;--------------------------------------------------------------
;--------------------------------------------------------------
#if 0
name=D<
stack=( d1 d2 -- flag )
tags=forth-83,double
[desc]
Compare two doubles.  True if d1 < d2
[/desc]
#endif
dlt
    ldy #0          ; false
    jsr dcmp
    bvc dlt01
    eor #$80
dlt01
    bpl dlt02
    dey             ; true
dlt02
    sty tos
    sty tos+1
    jmp threedrop
dcmp
    sec
    lda stackl+2,x
    sbc stackl,x
    lda stackh+2,x
    sbc stackh,x
    lda stackl+1,x
    sbc tos
    lda stackh+1,x
    sbc tos+1
    rts

;--------------------------------------------------------------
#if 0
name=DNEGATE
stack=( d -- -d )
tags=forth-83,double
[desc]
Negate the double on the stack
[/desc]
#endif
dnegate
    jsr dodnegate
    jmp next
dodnegate
    sec
    lda #0
    sbc stackl,x
    sta stackl,x
    lda #0
    sbc stackh,x
    sta stackh,x
    jmp neg2

;--------------------------------------------------------------
#if 0
name=DABS
stack=( d -- |d| )
[desc]
Returns the absolute value of double "d"
[/desc]
#endif
dabs
    lda tos+1
    bpl dabs01
    jmp dnegate
dabs01
    jmp next

;--------------------------------------------------------------
#if 0
name=2DUP
stack=( n1 n2 -- n1 n2 n1 n2 )
[desc]
Make a copy of the double on top of stack
[/desc]
#endif
twodup
	dex
	dex
	lda tos+1
	sta stackh+1,x
	lda tos
	sta stackl+1,x
	lda stackh+2,x
	sta stackh,x
	lda stackl+2,x
	sta stackl,x
	jmp next

;--------------------------------------------------------------
#if 0
name=2OVER
stack=( n1 n2 n3 n4 -- n1 n2 n3 n4 n1 n2 )
tags=primitive,double,stack,forth-83
[desc]
Copy the double underneath the double on top of stack to become the new top of stack
[/desc]
#endif
twoover
    dex
    dex
    lda tos+1
    sta stackh+1,x
    lda tos
    sta stackl+1,x
    lda stackh+4,x
    sta stackh,x
    lda stackl+4,x
    sta stackl,x
    lda stackh+3,x
    sta tos+1
    lda stackl+3,x
    sta tos
    jmp next

;--------------------------------------------------------------
#if 0
name=2ROT
stack=( lo3 hi3 lo2 hi2 lo1 hi1 -- lo2 hi2 lo1 hi1 lo3 hi3 )
[desc]
Rotate the three doubles on the stack
[/desc]
#endif
tworot
    ldy stackh+4,x
    lda stackh+2,x
    sta stackh+4,x
    lda stackh,x
    sta stackh+2,x
    sty stackh,x
    ldy stackl+4,x
    lda stackl+2,x
    sta stackl+4,x
    lda stackl,x
    sta stackl+2,x
    sty stackl,x            ; done moving lo words
    ldy stackh+3,x
    lda stackh+1,x
    sta stackh+3,x
    lda tos+1
    sta stackh+1,x
    sty tos+1
    ldy stackl+3,x
    lda stackl+1,x
    sta stackl+3,x
    lda tos
    sta stackl+1,x
    sty tos                 ; done moving hi words
    jmp next

;--------------------------------------------------------------
#if 0
name=2SWAP
stack=( hi2 lo2 hi1 lo1 -- hi1 lo1 hi2 lo2 )
[desc]
Swap the two doubles on the stack
[/desc]
#endif
twoswap
    ldy tos+1
    lda stackh+1,x
    sta tos+1
    sty stackh+1,x
    ldy tos
    lda stackl+1,x
    sta tos
    sty stackl+1,x
    ldy stackh,x
    lda stackh+2,x
    sta stackh,x
    sty stackh+2,x
    ldy stackl,x
    lda stackl+2,x
    sta stackl,x
    sty stackl+2,x
    jmp next

;--------------------------------------------------------------
#if 0
name=2!
stack=( hi lo addr -- )
[desc]
Store the double "hi" "lo" to "addr"
tags=forth-83,memory,double
[/desc]
#endif
twostore
    ldy #0
twostore01
    lda stackh,x
    sta (tos),y
    iny
    lda stackl,x
    sta (tos),y
    iny
    inx
    cpy #4
    bne twostore01
    jmp pops

;--------------------------------------------------------------
#if 0
name=2@
stack=( addr -- hi lo )
tags=forth-83,memory,double
[desc]
Retrieve the double stored at "addr" to the stack
[/desc]
#endif
twofetch
    ldy #3
    dex
    lda (tos),y
    sta stackh,x
    dey
    lda (tos),y
    sta stackl,x
    dey
    lda (tos),y
    sta n
    dey
    lda (tos),y
    ldy n
    jmp put

