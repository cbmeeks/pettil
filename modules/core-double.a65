dzeq
    ldy #0
    lda tos
    ora tos+1
    ora stackl,x
    ora stackh,x
    bne dzeq01
    dey
    bmi dzeq01

;--------------------------------------------------------------
#if 0
name=D=
stack=( hi2 lo2 hi1 lo1 -- flag )
[desc]
Leaves true if the two doubles are equal
[/desc]
#endif
deq
    ldy #0
    lda tos
    eor stackl+1,x
    bne deq01
    lda tos+1
    eor stackh+1,x
    bne deq01
    lda stackl,x
    eor stackl+2,x
    bne deq01
    lda stackh,x
    eor stackh+2,x
    bne deq01
    dey
deq01
    inx
    inx
dzeq01
    inx
    tya
    jmp put

