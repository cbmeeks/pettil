VIAORA		= VIA+1		; data with handshake
VIAPDRB		= VIA+2
VIADDRA		= VIA+3		; data direction
VIAT1LW		= VIA+4
VIAT1CH		= VIA+5
VIAT1LL		= VIA+6
VIAT1LH		= VIA+7
VIAT2LW		= VIA+8
VIAT2CH		= VIA+9
